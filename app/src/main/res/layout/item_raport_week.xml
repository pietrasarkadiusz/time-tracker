<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="weekStats"
            type="com.example.timespenttracker.model.WeekStats"/>
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:paddingHorizontal="16dp">
            <TextView
                android:text="@{weekStats.weekDate}"
                style="@style/normal_text"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <TextView
                    android:text="@string/apps_usage"
                    style="@style/secondary_text"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@{weekStats.usageInHMSFormat}"
                        style="@style/secondary_text"
                        android:layout_marginStart="2dp"/>
                    <TextView
                        android:textColor="@{weekStats.usagePercentChange>0 ? @color/red : @color/green}"
                        android:text="@{weekStats.usagePercentChangeString}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        style="@style/secondary_text"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <TextView
                    android:text="@string/text_average_usage"
                    style="@style/secondary_text"/>
                <TextView
                    android:text="@{weekStats.avgUsage}"
                    style="@style/secondary_text"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">
                <TextView
                    android:text="@string/app_launches"
                    style="@style/secondary_text"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@{String.valueOf(weekStats.visits)}"
                        style="@style/secondary_text"
                        android:layout_marginStart="2dp"/>
                    <TextView
                        android:textColor="@{weekStats.visitPercentChange>0 ? @color/red : @color/green}"
                        android:text="@{weekStats.visitPercentChangeString}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        style="@style/secondary_text"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <TextView
                    android:text="@string/text_average_launches"
                    style="@style/secondary_text"/>
                <TextView
                    android:text="@{weekStats.avgVisits}"
                    style="@style/secondary_text"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>